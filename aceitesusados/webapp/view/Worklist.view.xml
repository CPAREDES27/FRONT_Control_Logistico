<mvc:View
	controllerName="com.tasa.aceitesusados.controller.Worklist"
	
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.ui.table" xmlns:m="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:semantic="sap.f.semantic"
	xmlns:f="sap.ui.layout.form">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
			<m:Title
				text="{i18n>worklistTitle}"
				level="H2"/>
		</semantic:titleHeading>

		<semantic:headerContent>
			<f:Form >
				<f:title>
					<core:Title text="Datos de Selección" />
				</f:title>
				<f:formContainers>
					<f:FormContainer >
						<f:formElements>
							<f:FormElement label="Reserva">
								<f:fields>
									<m:Input  id="idReserva"
										placeholder="Ingrese Reserva" maxLength="20"/>
								</f:fields>
							</f:FormElement>
							
							<f:FormElement label="Fecha de reserva">
								<f:fields>
									<m:DateRangeSelection id="idFecha"
										displayFormat="dd/MM/yyyy"/>
								</f:fields>
							</f:FormElement>
							
							<f:FormElement label="Estado">
								<f:fields>
									<m:ComboBox editable="true"  id="idEstado" items="{path:'Estado>/ZD_FLESRNV',sorter:{path:'id'}}" enabled="true" visible="true" width="auto" valueState="None" maxWidth="100%">
                                        <m:items>
                                                <core:Item text="{Estado>descripcion}" enabled="true" key="{Estado>id}"/>
                                        </m:items>
                                </m:ComboBox>
								</f:fields>
							</f:FormElement>
							<!-- <f:FormElement label="Cantidad de aciertos">
								<f:fields>
									<Input 
										placeholder="Ingrese número de registros"
										type="Number"/>
								</f:fields>
							</f:FormElement> -->
						</f:formElements>
					</f:FormContainer>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement label="Embarcación">
								<f:fields>
									<m:Input type="Text" id="idEmbarcacion2" showValueHelp="true" enabled="true" visible="true" width="91%" valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="0" valueHelpRequest="onOpenEmba"/>
									<m:Text text="" id="txtEmbarca" width="50%" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Almacén">
								<f:fields>
									<m:ComboBox editable="true"  id="idAlmacen" items="{Almacen>/ALMACEN}" enabled="true" visible="true" width="auto" valueState="None" maxWidth="50%">
                                        <m:items>
                                                <core:Item text="{Almacen>descripcion}" enabled="true" key="{Almacen>id}"/>
                                        </m:items>
                                	</m:ComboBox>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
					<f:FormContainer >
						<f:formElements>
							<f:FormElement>
								<f:fields>
									<m:Button text="Buscar" type="Emphasized" icon="sap-icon://search" iconFirst="true" width="100%" enabled="true" visible="true" iconDensityAware="false" press="onBusqueda"/>
                                    <m:Button press="onLimpiar" text="Limpiar" type="Emphasized" icon="sap-icon://clear-filter" iconFirst="true" width="100%" enabled="true" visible="true" iconDensityAware="false"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="2"
						labelSpanL="3"
						labelSpanM="4"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="0"
						emptySpanL="0"
						emptySpanM="0"
						emptySpanS="0"
						columnsXL="2"
						columnsL="2"
						columnsM="1"
						singleContainerFullSize="false" />
				</f:layout>
			</f:Form>
		</semantic:headerContent>

		<semantic:content>
			<Table
                            id="table"
                            rows="{Aceite>/listaAceite}"
							selectionMode="MultiToggle"
                            visibleRowCount="7"
                            showColumnVisibilityMenu="{ui>/showVisibilityMenuEntry}"
                            enableColumnFreeze="{ui>/showFreezeMenuEntry}"
                            enableCellFilter="{ui>/enableCellFilter}"
                            columnSelect="onColumnSelect"
                            cellContextmenu="onProductIdCellContextMenu"
                            ariaLabelledBy="title"
							>
				<extension>
					<m:OverflowToolbar style="Clear">
						<m:Title id="title" text="Lista de registros: {dataPrecio.str_ppc.total}" />
						<m:ToolbarSpacer/>
						<m:ToolbarSeparator/>
						<m:Button icon="sap-icon://add" press="onNuevo" text="Nuevo" tooltip="Nuevo"/>
						<m:Button icon="sap-icon://decline" press="onAnular" text="Anular" tooltip="Anular"/>
                        <m:Button icon="sap-icon://excel-attachment" press="onDataExport" text="Exportar" tooltip="Exportar Excel"/>
						<m:SearchField
							placeholder="Búsqueda rápida"
							value="{ui>/globalFilter}"
							liveChange="onSearch"
							width="15rem"/>
					</m:OverflowToolbar>
				</extension>
				<columns>
               
                	<Column
						id="NRRNV"
						width="11rem"
						sortProperty="NRRNV"
						filterProperty="NRRNV"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
							<m:Label text="Reserva" />
						<template>
							<m:Text text="{Aceite>NRRNV}" wrapping="false" />
						</template>
					</Column>
                   <Column
						id="NMEMB"
						width="11rem"
						sortProperty="NMEMB"
						filterProperty="NMEMB"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
							<m:Label text="Embarcación" />
						<template>
							<m:Text text="{Aceite>NMEMB}" wrapping="false" />
						</template>
					</Column>
					<Column
						id="CDSUM"
						width="11rem"
						sortProperty="CDSUM"
						filterProperty="CDSUM"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
							<m:Label text="Material" />
						<template>
							<m:Text text="{Aceite>CDSUM}" wrapping="false" />
						</template>
					</Column>
					<Column
						id="CDALM"
						width="11rem"
						sortProperty="CDALM"
						filterProperty="CDALM"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
							<m:Label text="Almacén" />
						<template>
							<m:Text text="{Aceite>CDALM}" wrapping="false" />
						</template>
					</Column>
					<Column
						id="FHCRN"
						width="11rem"
						sortProperty="FHCRN"
						filterProperty="FHCRN"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
							<m:Label text="Fecha de reserva" />
						<template>
							<m:Text text="{Aceite>FHCRN}" wrapping="false" />
						</template>
					</Column>
					<Column
						id="CNSUM"
						width="11rem"
						sortProperty="CNSUM"
						filterProperty="CNSUM"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
							<m:Label text="Total peso Kg" />
						<template>
							<m:Text text="{Aceite>CNSUM}" wrapping="false" />
						</template>
					</Column>
					<Column
						id="NRTGA"
						width="11rem"
						sortProperty="NRTGA"
						filterProperty="NRTGA"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
							<m:Label text="Cant. galones" />
						<template>
							<m:Text text="{Aceite>NRTGA}" wrapping="false" />
						</template>
					</Column>
					<Column
						id="MSEHL"
						width="11rem"
						sortProperty="MSEHL"
						filterProperty="MSEHL"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
							<m:Label text="UM" />
						<template>
							<m:Text text="{Aceite>MSEHL}" wrapping="false" />
						</template>
					</Column>
					<Column
						id="ESRNV"
						width="11rem"
						sortProperty="ESRNV"
						filterProperty="ESRNV"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
							<m:Label text="Estado" />
						<template>
							<m:Text text="{Aceite>DESC_ESRNV}" wrapping="false" />
						</template>
					</Column>
					<Column
						id="idDetalle"
						width="11rem"
						sortProperty="ESRNV"
						filterProperty="ESRNV"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
							<m:Label text="Detalle" />
						<template>
						<!-- sap-icon://show -->
							<m:Button icon="" text="Detalle" press="onDetail" />
						</template>
					</Column>
                   
                    

					<!--Columnas-->

				</columns>
				<footer>
					<m:OverflowToolbar id="infobar">

                    </m:OverflowToolbar>
				</footer>
			</Table>
		</semantic:content>

	</semantic:SemanticPage>

</mvc:View>