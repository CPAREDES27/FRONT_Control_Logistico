<mvc:View
	controllerName="com.tasa.consultahorom.controller.Worklist"
	xmlns="sap.ui.table" xmlns:m="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form">

	<semantic:SemanticPage
		id="page">

		<semantic:titleHeading>
			<m:Title
				text="{i18n>worklistTitle}"
				level="H2"/>
		</semantic:titleHeading>

		<semantic:headerContent>
			<f:Form id="idFormHeader" editable="true" >
				<f:title>
					<core:Title text="Datos de Selección" />
				</f:title>
				<f:formContainers>
					<f:FormContainer >
						<f:formElements>
							<f:FormElement label="Embarcación">
								<f:fields>
								<m:Input type="Text" id="idEmbarcacion" showValueHelp="true" enabled="true" visible="true" width="100%" valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="0" valueHelpRequest="onOpenEmba"/>			
								<m:Text id="idText" text=""/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
					<f:FormContainer >
						<f:formElements>
							<f:FormElement label="Fechas ">
								<f:fields>
									<m:DateRangeSelection id="idFecha"
										displayFormat="dd/MM/yyyy"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
						<f:formElements>
							<f:FormElement >
								<f:fields>
									<m:Button text="Buscar" type="Emphasized" press="onBusqueda" tooltip="Busqueda"/>
									<m:Button text="Limpiar" type="ghost" press="onLimpiar" tooltip="Limpiar Datos de búsqueda"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
					<f:FormContainer >
						
					</f:FormContainer>
				</f:formContainers>
				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="2"
						labelSpanL="3"
						labelSpanM="4"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="0"
						emptySpanL="0"
						emptySpanM="0"
						emptySpanS="0"
						columnsXL="2"
						columnsL="2"
						columnsM="1"
						singleContainerFullSize="false" />
				</f:layout>
			</f:Form>
		</semantic:headerContent>

		<semantic:content>
			<Table
                            id="table"
                            rows="{Horometro>/listaHorometro}"
							selectionMode="None"
                            visibleRowCount="7"
                            showColumnVisibilityMenu="{ui>/showVisibilityMenuEntry}"
                            enableColumnFreeze="{ui>/showFreezeMenuEntry}"
                            enableCellFilter="{ui>/enableCellFilter}"
                            columnSelect="onColumnSelect"
                            cellContextmenu="onProductIdCellContextMenu"
                            ariaLabelledBy="title"
							>
				<extension>
					<m:OverflowToolbar style="Clear">
						<m:Title id="title" text="Lista de registros: {dataPrecio.str_ppc.total}" />
						<m:ToolbarSpacer/>
						<m:ToolbarSeparator/>
                        <m:Button icon="sap-icon://excel-attachment" press="onExportarExcelData" text="Exportar" tooltip="Exportar Excel"/>
						<m:Button icon="sap-icon://excel-attachment" press="onDataExport2" text="Exportar Embarcación" tooltip="Exportar Excel"/>
						<m:SearchField
							placeholder="Búsqueda rápida"
							value="{ui>/globalFilter}"
							liveChange="onSearch"
							width="15rem"/>
					</m:OverflowToolbar>
				</extension>
				<columns>
               <Column
						id="NRO"
						width="5rem"
						sortProperty="NRO"
						filterProperty="NRO"
						showFilterMenuEntry="true"
						showSortMenuEntry="true"
						hAlign="End">
                       
                            <m:Label text="No." />
                       
						
						<template>
							<m:Text text="{Horometro>NRO}" wrapping="false" />
						</template>
					</Column>
                	<Column
						id="fecha"
						width="11rem"
						sortProperty="fecha"
						filterProperty="fecha"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
                       
							<m:Label text="Fecha" />
						
						
						<template>
							<m:Text text="{Horometro>fecha}" wrapping="false" />
						</template>
					</Column>
                   
                    <Column
						id="motorPrincipal"
						width="11rem"
						sortProperty="motorPrincipal"
						filterProperty="motorPrincipal"
						showFilterMenuEntry="true"
						showSortMenuEntry="true"
						hAlign="End">
                       
                            <m:Label text="Motor Principal" />
                       
						
						<template>
							
							<m:Text text="{path:'Horometro>motorPrincipal', type:'sap.ui.model.type.Float',

                                                formatOptions:{

                                                    minIntegerDigits:1,

                                                    minFractionDigits:3,

                                                    maxFractionDigits:3,

                                                    groupingEnabled:true,

                                                    groupingSeparator: ',',

                                                    decimalSeparator: '.'

                                                }}"/>
						</template>
					</Column>
                    <Column
						id="motorAuxiliar"
						width="11rem"
						sortProperty="motorAuxiliar"
						filterProperty="motorAuxiliar"
						showFilterMenuEntry="true"
						showSortMenuEntry="true"
						hAlign="End">
                        
                            <m:Label text="Motor Auxiliar 1" />
                    
						
						<template>
							<m:Text text="{Horometro>motorAuxiliar}" wrapping="false" />
						</template>
					</Column>
                    <Column
						id="motorAuxiliar2"
						width="22rem"
						sortProperty="motorAuxiliar2"
						filterProperty="motorAuxiliar2"
						showFilterMenuEntry="true"
						showSortMenuEntry="true"
						hAlign="End">
                      
                            <m:Label text="Motor Auxiliar 2" />
                     
						
						<template>
							<m:Text text="{Horometro>motorAuxiliar2}"  />
						</template>
					</Column>
                    <Column
						id="motorAuxiliar3"
						width="11rem"
						sortProperty="motorAuxiliar3"
						filterProperty="motorAuxiliar3"
						showFilterMenuEntry="true"
						showSortMenuEntry="true"
						hAlign="End">
                         
                            <m:Label text="Motor Auxiliar 3" />
                        
						
						<template>
							<m:Text text="{Horometro>motorAuxiliar3}" wrapping="false" />
						</template>
					</Column>
                    <Column
						id="motorAuxiliar4"
						width="11rem"
						sortProperty="motorAuxiliar4"
						filterProperty="motorAuxiliar4"
						showFilterMenuEntry="true"
						showSortMenuEntry="true"
						hAlign="End">
                      
                            <m:Label text="Motor Auxiliar 4" />
                 
						
						<template>
							<m:Text text="{Horometro>motorAuxiliar4}" wrapping="false" />
						</template>
					</Column>
                    <Column
						id="motorAuxiliar5"
						width="11rem"
						sortProperty="motorAuxiliar5"
						filterProperty="motorAuxiliar5"
						showFilterMenuEntry="true"
						showSortMenuEntry="true"
						hAlign="End">
                         
                            <m:Label text="Motor Auxiliar 5" />
                   
						
						<template>
							<m:Text text="{Horometro>motorAuxiliar5}" wrapping="false" />
						</template>
					</Column>
                    <Column
						id="panga"
						width="11rem"
						sortProperty="panga"						
						filterProperty="panga"
						showFilterMenuEntry="true"
						showSortMenuEntry="true"
                       
						hAlign="End"
						>
                        <m:Label text="Panga" textAlign="Center" width="100%"/>
						<template>
							<m:Text  text="{Horometro>panga}" wrapping="false" />
						</template>
					</Column>
					 <Column
						id="flujometro"
						width="11rem"
						sortProperty="flujometro"						
						filterProperty="flujometro"
						showFilterMenuEntry="true"
						showSortMenuEntry="true"
						hAlign="End"
						>
                        <m:Label text="Flujómetro de Panga" textAlign="Center" width="100%"/>
						<template>
							<m:Text  text="{Horometro>flujometro}" wrapping="false" />
						</template>
					</Column>
                    

					<!--Columnas-->

				</columns>
				<footer>
					<m:OverflowToolbar id="infobar">

                    </m:OverflowToolbar>
				</footer>
			</Table>
		</semantic:content>

	</semantic:SemanticPage>

</mvc:View>