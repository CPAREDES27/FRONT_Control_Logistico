<mvc:View
	controllerName="com.tasa.consultahorom.controller.Worklist"
	xmlns="sap.ui.table" xmlns:m="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form">

	<semantic:SemanticPage
		id="page">

		<semantic:titleHeading>
			<m:Title
				text="{i18n>worklistTitle}"
				level="H2"/>
		</semantic:titleHeading>

		<semantic:headerContent>
			<f:Form id="idFormHeader" >
				<f:title>
					<core:Title text="Datos de Selección" />
				</f:title>
				<f:formContainers>
					<f:FormContainer >
						<f:formElements>
							<f:FormElement label="Embarcación">
								<f:fields>
									<m:Input  change="multiInputPlanta" class="sapUiSmallMarginBottom"
												id="idEmbarcacionIni"
												width="100%"
												placeholder="Ingresar Embarcacion..."
												showSuggestion="true"
												showValueHelp="false"
												valueState="Information"
												valueStateText="Ingrese un texto"
												suggestionRows="{Embarcacion>/listaEmbarcacion}">
												<m:suggestionColumns>
													<m:Column
														hAlign="Begin"
														popinDisplay="Inline"
														demandPopin="true"
														minScreenWidth="Tablet">
														<m:Label text="Codigo Embarcacion"/>
													</m:Column>
													<m:Column
														hAlign="End"
														popinDisplay="Inline"
														demandPopin="true"
														minScreenWidth="Tablet">
														<m:Label text="Descripcion"/>
													</m:Column>
													<m:Column
														hAlign="End"
														popinDisplay="Inline"
														demandPopin="true"
														minScreenWidth="Tablet">
														<m:Label text="Matricula"/>
													</m:Column>	
													<m:Column
														hAlign="End"
														popinDisplay="Inline"
														demandPopin="true"
														minScreenWidth="Tablet">
														<m:Label text="RUC"/>
													</m:Column>	
													<m:Column
														hAlign="End"
														popinDisplay="Inline"
														demandPopin="true"
														minScreenWidth="Tablet">
														<m:Label text="Desc. Armador"/>
													</m:Column>	
												</m:suggestionColumns>
												<m:suggestionRows>
													<m:ColumnListItem>
													<m:cells>
														<m:Label text="{Embarcacion>CDEMB}"/>
														<m:Label text="{Embarcacion>MREMB}"/>
														<m:Label text="{Embarcacion>NMEMB}"/>
														<m:Label text="{Embarcacion>LIFNR}"/>
														<m:Label text="{Embarcacion>NAME1}"/>
														<m:Label text="{
																parts:[{path:'Codigo Embarcacion'},{path:'Descripcion'},{path:'Matricula'},{path:'RUC'},{path:'Desc. Armador'}],
																type: 'sap.ui.model.type.Currency',
																formatOptions: {showMeasure: true}
																}"/>
													</m:cells>
													</m:ColumnListItem>
												</m:suggestionRows>
											</m:Input>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
					<f:FormContainer >
						<f:formElements>
							<f:FormElement label="Fechas ">
								<f:fields>
									<m:DateRangeSelection id="idFecha"
										placeholder="Ingrese rango de fecha"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
					<f:FormContainer >
						<f:formElements>
							<f:FormElement >
								<f:fields>
									<m:Button text="buscar" type="Emphasized" press="onBusqueda" tooltip="Busqueda"/>
									<m:Button text="limpiar" type="Emphasized" press="onLimpiar" tooltip="Limpiar Datos de búsqueda"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="2"
						labelSpanL="3"
						labelSpanM="4"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="0"
						emptySpanL="0"
						emptySpanM="0"
						emptySpanS="0"
						columnsXL="2"
						columnsL="2"
						columnsM="1"
						singleContainerFullSize="false" />
				</f:layout>
			</f:Form>
		</semantic:headerContent>

		<semantic:content>
			<Table
                            id="table"
                            rows="{Horometro>/listaHorometro}"
                            visibleRowCount="7"
                            showColumnVisibilityMenu="{ui>/showVisibilityMenuEntry}"
                            enableColumnFreeze="{ui>/showFreezeMenuEntry}"
                            enableCellFilter="{ui>/enableCellFilter}"
                            columnSelect="onColumnSelect"
                            cellContextmenu="onProductIdCellContextMenu"
                            ariaLabelledBy="title">
				<extension>
					<m:OverflowToolbar style="Clear">
						<m:Title id="title" text="Lista de precios: {dataPrecio.str_ppc.total}" />
						<m:ToolbarSpacer/>
						<m:ToolbarSeparator/>
                        <m:Button icon="sap-icon://excel-attachment" press="onDataExport" text="Exportar" tooltip="Exportar Excel"/>
						<m:SearchField
							placeholder="Búsqueda rápida"
							value="{ui>/globalFilter}"
							search="filterGlobally"
							width="15rem"/>
					</m:OverflowToolbar>
				</extension>
				<columns>
               
                	<Column
						id="fecha"
						width="11rem"
						sortProperty="fecha"
						filterProperty="fecha"
						showFilterMenuEntry="true"
						showSortMenuEntry="true">
                       
							<m:Label text="Fecha" />
						
						
						<template>
							<m:Text text="{Horometro>fecha}" wrapping="false" />
						</template>
					</Column>
                   
                    <Column
						id="motorPrincipal"
						width="11rem"
						sortProperty="motorPrincipal"
						filterProperty="motorPrincipal"
						showFilterMenuEntry="true"
						showSortMenuEntry="true"
						hAlign="End">
                       
                            <m:Label text="Motor Principal" />
                       
						
						<template>
							<m:Text text="{path:'Horometro>motorPrincipal',type:'sap.ui.model.type.Float'}" wrapping="false" />
						</template>
					</Column>
                    <Column
						id="motorAuxiliar"
						width="11rem"
						sortProperty="motorAuxiliar"
						filterProperty="motorAuxiliar"
						showFilterMenuEntry="true"
						showSortMenuEntry="true"
						hAlign="End">
                        
                            <m:Label text="Motor Auxiliar 1" />
                    
						
						<template>
							<m:Text text="{path:'Horometro>motorAuxiliar',type:'sap.ui.model.type.Float'}" wrapping="false" />
						</template>
					</Column>
                    <Column
						id="motorAuxiliar2"
						width="22rem"
						sortProperty="motorAuxiliar2"
						filterProperty="motorAuxiliar2"
						showFilterMenuEntry="true"
						showSortMenuEntry="true"
						hAlign="End">
                      
                            <m:Label text="Motor Auxiliar 2" />
                     
						
						<template>
							<m:Text text="{path:'Horometro>motorAuxiliar2',type:'sap.ui.model.type.Float'}"  />
						</template>
					</Column>
                    <Column
						id="motorAuxiliar3"
						width="11rem"
						sortProperty="motorAuxiliar3"
						filterProperty="motorAuxiliar3"
						showFilterMenuEntry="true"
						showSortMenuEntry="true"
						hAlign="End">
                         
                            <m:Label text="Motor Auxiliar 3" />
                        
						
						<template>
							<m:Text text="{path:'Horometro>motorAuxiliar3',type:'sap.ui.model.type.Float'}" wrapping="false" />
						</template>
					</Column>
                    <Column
						id="motorAuxiliar4"
						width="11rem"
						sortProperty="motorAuxiliar4"
						filterProperty="motorAuxiliar4"
						showFilterMenuEntry="true"
						showSortMenuEntry="true"
						hAlign="End">
                      
                            <m:Label text="Motor Auxiliar 4" />
                 
						
						<template>
							<m:Text text="{path:'Horometro>motorAuxiliar4',type:'sap.ui.model.type.Float'}" wrapping="false" />
						</template>
					</Column>
                    <Column
						id="motorAuxiliar5"
						width="11rem"
						sortProperty="motorAuxiliar5"
						filterProperty="motorAuxiliar5"
						showFilterMenuEntry="true"
						showSortMenuEntry="true"
						hAlign="End">
                         
                            <m:Label text="Motor Auxiliar 5" />
                   
						
						<template>
							<m:Text text="{path:'Horometro>motorAuxiliar5',type:'sap.ui.model.type.Float'}" wrapping="false" />
						</template>
					</Column>
                    <Column
						id="panga"
						width="11rem"
						sortProperty="panga"						
						filterProperty="panga"
						showFilterMenuEntry="true"
						showSortMenuEntry="true"
                        headerSpan="2,1"
						hAlign="End"
						>
                        <m:Label text="Panga" textAlign="Center" width="100%"/>
						<template>
							<m:Text  text="{path:'Horometro>panga',type:'sap.ui.model.type.Float'}" wrapping="false" />
						</template>
					</Column>
					 <Column
						id="flujometro"
						width="11rem"
						sortProperty="flujometro"						
						filterProperty="flujometro"
						showFilterMenuEntry="true"
						showSortMenuEntry="true"
                        headerSpan="2,1"
						hAlign="Flujómetro de panga"
						>
                        <m:Label text="Max" textAlign="Center" width="100%"/>
						<template>
							<m:Text  text="{path:'Horometro>flujometro',type:'sap.ui.model.type.Float'}" wrapping="false" />
						</template>
					</Column>
                    

					<!--Columnas-->

				</columns>
				<footer>
					<m:OverflowToolbar id="infobar">

                    </m:OverflowToolbar>
				</footer>
			</Table>
		</semantic:content>

	</semantic:SemanticPage>

</mvc:View>